<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004C70"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">


    <!-- App Icon -->

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="20dp">
    <ImageView
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity A"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />
    </LinearLayout>


    <!-- Start Activity B -->
    <Button
        android:id="@+id/button_start_b"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFD700"
        android:onClick="startActivityB"
        android:text="Start Activity B"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Row for Start Activity C and Dialog -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_start_c"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="#FFD700"
            android:onClick="startActivityC"
            android:text="Start Activity C"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_dialog"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#FFD700"
            android:text="Dialog"
            android:textSize="16sp"
            android:textStyle="bold"
            android:onClick="showDialog" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!-- Thread Counter Display -->

    <TextView
        android:id="@+id/thread_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/restart_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Close App Button -->
    <Button
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:onClick="finishActivityA"
        android:padding="10dp"
        android:text="Close App"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>
