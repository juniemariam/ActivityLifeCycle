<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="#004C70">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity C"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity C occupies the complete window real-estate.The Android OS forces Activity A to be Paused. However, the background thread keep incrementing"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/finishBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Finish C"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:onClick="finishActivityC"
        android:background="@drawable/custom_button"
        android:padding="10dp"/>

</LinearLayout>